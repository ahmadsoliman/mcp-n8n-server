{
  "name": "@ahmadsoliman/mcp-n8n-server",
  "version": "1.0.1",
  "description": "MCP server for n8n API integration",
  "main": "build/index.js",
  "type": "module",
  "bin": {
    "mcp-n8n-server": "build/index.js",
    "mcp-n8n-verify": "build/verify-connection.js"
  },
  "scripts": {
    "build": "tsc && chmod 755 build/index.js build/verify-connection.js",
    "start": "node build/index.js",
    "dev": "tsc && node build/index.js",
    "verify": "node build/verify-connection.js",
    "test": "npm run verify",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "build",
    "README.md",
    "USAGE_EXAMPLES.md"
  ],
  "keywords": [
    "mcp",
    "n8n",
    "api",
    "automation",
    "claude",
    "llm",
    "model-context-protocol"
  ],
  "author": "",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ahmadsoliman/mcp-n8n-server.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.8.0",
    "axios": "^1.6.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.14",
    "nodemon": "^3.0.3",
    "typescript": "^5.8.2"
  }
}